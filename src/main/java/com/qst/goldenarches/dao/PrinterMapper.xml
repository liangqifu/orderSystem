<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qst.goldenarches.dao.PrinterMapper">
    <sql id="baseList">
       s.id,s.name,s.ip,s.status
   </sql>
    <insert id="insert" parameterType="com.qst.goldenarches.pojo.Printer">
        INSERT INTO t_printer (name,ip,status) VALUES (#{name},#{ip},#{status})
    </insert>
    <update id="update" parameterType="com.qst.goldenarches.pojo.Printer">
        UPDATE t_printer SET name=#{name},ip=#{ip},status=#{status}
        WHERE id=#{id}
    </update>
    <delete id="deleteById">
        DELETE FROM t_printer
        WHERE id=#{id}
    </delete>
    <select id="getById" resultType="com.qst.goldenarches.pojo.Printer" parameterType="java.lang.Integer">
         SELECT <include refid="baseList"/>
        FROM t_printer s
        WHERE s.id=#{id}
    </select>   
    <select id="query" resultType="com.qst.goldenarches.pojo.Printer" parameterType="java.util.HashMap">
         SELECT
          @rownum:=@rownum + 1 as rowNo,
          <include refid="baseList"/>
        FROM t_printer s,(select @rownum := 0) m
        WHERE 1=1
        <if test="queryText !=null and queryText !='' ">
           and (s.ip like concat('%',#{queryText },'%') or s.name like concat('%',#{queryText},'%'))
        </if>
        <if test="ip !=null and ip !='' ">
           and s.ip like concat('%',#{ip},'%')
        </if>
        <if test="name !=null and name !='' ">
           and s.name like concat('%',#{name},'%')
        </if>
        <if test="status !=null and status !='' ">
           and s.status = #{status}
        </if>
    </select>
    <select id="ckExitIp" parameterType="java.lang.String" resultType="java.lang.Integer">
     SELECT count(1)
        FROM t_printer s
        WHERE s.ip=#{ip}
    </select>
</mapper>