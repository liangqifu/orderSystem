<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qst.goldenarches.dao.CategoryMapper">
   <sql id="baseCategoryList">
       category_id id,parent_id parentId,category_name name,printid,
       (SELECT t1.ip from t_printer t1 where t1.id=printid) as printIp,
       (SELECT t1.name from t_printer t1 where t1.id=printid) as printerName,
       state,
       pic
   </sql>
    <insert id="insertCategory">
        INSERT INTO product_category(parent_id,category_name,printid,pic,create_time,update_time)
         VALUES (#{parentId},#{name},#{printid},#{pic},CURRENT_TIMESTAMP,CURRENT_TIMESTAMP)
    </insert>
    <update id="updateCategory">
        UPDATE product_category SET 
        category_name=#{name},
        parent_id=#{parentId},
        printid=#{printid},
        state=#{state},
        pic=#{pic},
        update_time=CURRENT_TIMESTAMP
        WHERE category_id=#{id}
    </update>
    <delete id="deleteCategory">
        DELETE FROM product_category
        WHERE category_id=#{id}
    </delete>
    <select id="getById" resultType="com.qst.goldenarches.pojo.Category" parameterType="java.lang.Integer">
         SELECT <include refid="baseCategoryList"/>
        FROM product_category
        WHERE category_id=#{id}
    </select>
    
    <delete id="deleteCategories">
        update  product_category set state ='1' WHERE category_id IN
        <foreach collection="categoryids" item="categoryid" open="(" close=")" separator=",">
            #{categoryid}
        </foreach>
    </delete>
    <select id="query" resultType="com.qst.goldenarches.pojo.Category" parameterType="com.qst.goldenarches.pojo.Category">
        SELECT <include refid="baseCategoryList"/>
        FROM product_category
        <where>
            1=1
            <if test="state !=null">
                AND state = #{state}
            </if>
            <if test="parentId !=null and parentId !=0 ">
                AND parent_id = #{parentId}
            </if>
            <if test="name!=null and name !='' ">
                AND category_name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>
    <select id="selectHaveProductCategories" resultType="com.qst.goldenarches.pojo.Category">
        SELECT <include refid="baseCategoryList"/>
        FROM product_category
        WHERE category_id IN (
	          SELECT category_id FROM product_info
	          WHERE category_id IN
              <foreach collection="categoryids" item="categoryid" open="(" close=")" separator=",">
                 #{categoryid}
              </foreach>
        )
    </select>
</mapper>